# Application
ENV=development
DEBUG=true
APP_NAME="Agent Squad"
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agent_squad_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# NATS Message Bus (for agent communication)
MESSAGE_BUS=nats
NATS_URL=nats://localhost:4222

# Cache Configuration (Redis-based caching for performance)
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_PREFIX=agent_squad
# Cache TTLs (seconds) - Data-driven: adjust based on monitoring
CACHE_USER_TTL=300
CACHE_ORG_TTL=600
CACHE_SQUAD_TTL=300
CACHE_TASK_TTL=30  # Reduced from 120s - agents may complete tasks quickly
CACHE_EXECUTION_STATUS_TTL=10

# Cache Metrics Configuration
CACHE_METRICS_ENABLED=true  # Track cache performance
CACHE_METRICS_WINDOW=3600  # Track last 1 hour (3600 seconds)

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# BetterAuth
BETTERAUTH_SECRET=your-betterauth-secret-here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_STARTER_PRICE_ID=price_starter_id
STRIPE_PRO_PRICE_ID=price_pro_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=org-your-org-id

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Groq (fast, free-tier available)
GROQ_API_KEY=

# Ollama (Local LLM - FREE, no API key required)
# Install: https://ollama.com/download
# Default model: llama3.2 (run: ollama pull llama3.2)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=agent-squad

# Inngest
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# MCP Servers (optional, for local development)
MCP_GIT_SERVER_URL=http://localhost:5001
MCP_JIRA_SERVER_URL=http://localhost:5002

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=

# Feature Flags
